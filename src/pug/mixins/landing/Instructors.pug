mixin Slider(config)
  .text-center
    img.w-100(src=`${CWD}assets/img/gallery/${config.image}`  alt='')
    h5.fw-normal.font-base.lh-base.text-black.mt-3 !{config.name}
    p.mb-0 !{config.designation}


mixin Instructors
  +Section
    .row
      .col-12
        h1.header-title.display-4.header.text-center.mb-5  MEET OUR INSTRUCTORS
        .swiper-container.theme-slider(data-swiper!={
          spaceBetween: 1,
          slideToClickedSlide: true,
         
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
            bulletActiveClass:'bullet-active'
          },
          breakpoints: {
            320: {
              slidesPerView: 1,
              spaceBetween: 20
            },
            480: {
              slidesPerView: 3,
              spaceBetween: 30
            },
            640: {
              slidesPerView: 4,
              spaceBetween: 40
            }
          }
        })
          .swiper-wrapper
            .swiper-slide
              +Slider(instructor[0]) 
            .swiper-slide
              +Slider(instructor[1]) 
            .swiper-slide
              +Slider(instructor[2]) 
            .swiper-slide
              +Slider(instructor[3])
            .swiper-slide
              +Slider(instructor[0]) 
            .swiper-slide
              +Slider(instructor[1]) 
            .swiper-slide
              +Slider(instructor[2]) 
            .swiper-slide
              +Slider(instructor[3])    
          .swiper-nav.position-relative
            .swiper-button-next 
              svg.bi.bi-arrow-right(xmlns='http://www.w3.org/2000/svg' width='42' height='27' fill='currentColor' viewBox='0 0 16 16')
                path(fill-rule='evenodd' d='M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z')
            .swiper-button-prev  
              svg.bi.bi-arrow-left(xmlns='http://www.w3.org/2000/svg' width='42' height='27' fill='currentColor' viewBox='0 0 16 16') 
                path(fill-rule='evenodd' d='M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z')

          .swiper-pagination.position-static.d-flex.justify-contnet-evenly.mx-2.mt-5 
          .d-flex.justify-content-sm-end.justify-content-center.mt-sm-n5
            a.btn.btn-link.text-decoration-none.m-2(href="#!")  See all  
          .swiper-nav
            .swiper-button-next.swiper-button-white
            .swiper-button-prev.swiper-button-white
      .swiper-pagination.text-center        
